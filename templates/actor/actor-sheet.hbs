<form class="marked sheet actor" autocomplete="off">
  <!-- HEADER -->
  <header class="sheet-header flexrow">
    <div class="profile">
      <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" />
    </div>

    <div class="header-fields">
      <div class="name-row">
        <input name="name" type="text" value="{{actor.name}}" placeholder="Name" />
      </div>

      <div class="meta-row flexrow">
        <div class="field">
          <label>Type</label>
          <input type="text" value="{{actor.type}}" disabled />
        </div>

        <div class="field">
          <label>Rank</label>
          <select name="system.details.rank">
            {{#select system.details.rank}}
              <option value="Normal">Normal</option>
              <option value="Quartz">Quartz</option>
              <option value="Topaz">Topaz</option>
              <option value="Garnet">Garnet</option>
              <option value="Emerald">Emerald</option>
              <option value="Sapphire">Sapphire</option>
              <option value="Ruby">Ruby</option>
              <option value="Diamond">Diamond</option>
              <option value="Mythrite">Mythrite</option>
              <option value="Celestite">Celestite</option>
            {{/select}}
          </select>
        </div>

        <div class="field">
          <label>Mark</label>
          <input type="text" name="system.details.mark" value="{{system.details.mark}}" />
        </div>
      </div>

      <div class="meta-row flexrow">
        <div class="field">
          <label>Race</label>
          <input type="text" name="system.details.race" value="{{system.details.race}}" placeholder="Race / Origin" />
        </div>

        <div class="field">
          <label>Background</label>
          <input type="text" name="system.details.background" value="{{system.details.background}}" placeholder="Background" />
        </div>
      </div>
    </div>
  </header>

  <!-- TABS -->
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="main">Main</a>
    <a class="item" data-tab="inventory">Inventory</a>
  </nav>

  <!-- BODY -->
  <section class="sheet-body">
    <div class="tab" data-group="primary" data-tab="main">
      <!-- MAIN TAB: Attributes & (later) Status -->
      <section class="main-grid">
        <!-- Attributes -->
        <section class="attributes-section">
          <h2>Attributes</h2>

          <div class="attribute-groups flexrow">
            <!-- BODY -->
            <div class="attribute-group">
              <h3>Body</h3>
              <div class="field">
                <label>{{system.attributes.body.label}}</label>
                <input type="number" name="system.attributes.body.value" value="{{system.attributes.body.value}}" />
              </div>
              <div class="field">
                <label>{{system.attributes.body.sub1.label}}</label>
                <input type="number" name="system.attributes.body.sub1.value" value="{{system.attributes.body.sub1.value}}" />
              </div>
              <div class="field">
                <label>{{system.attributes.body.sub2.label}}</label>
                <input type="number" name="system.attributes.body.sub2.value" value="{{system.attributes.body.sub2.value}}" />
              </div>
              <div class="field">
                <label>{{system.attributes.body.sub3.label}}</label>
                <input type="number" name="system.attributes.body.sub3.value" value="{{system.attributes.body.sub3.value}}" />
              </div>
              <div class="field">
                <label>{{system.attributes.body.sub4.label}}</label>
                <input type="number" name="system.attributes.body.sub4.value" value="{{system.attributes.body.sub4.value}}" />
              </div>
            </div>

            <!-- MIND -->
            <div class="attribute-group">
              <h3>Mind</h3>
              <div class="field">
                <label>{{system.attributes.mind.label}}</label>
                <input type="number" name="system.attributes.mind.value" value="{{system.attributes.mind.value}}" />
              </div>
              <div class="field">
                <label>{{system.attributes.mind.sub1.label}}</label>
                <input type="number" name="system.attributes.mind.sub1.value" value="{{system.attributes.mind.sub1.value}}" />
              </div>
              <div class="field">
                <label>{{system.attributes.mind.sub2.label}}</label>
                <input type="number" name="system.attributes.mind.sub2.value" value="{{system.attributes.mind.sub2.value}}" />
              </div>
              <div class="field">
                <label>{{system.attributes.mind.sub3.label}}</label>
                <input type="number" name="system.attributes.mind.sub3.value" value="{{system.attributes.mind.sub3.value}}" />
              </div>
              <div class="field">
                <label>{{system.attributes.mind.sub4.label}}</label>
                <input type="number" name="system.attributes.mind.sub4.value" value="{{system.attributes.mind.sub4.value}}" />
              </div>
            </div>

            <!-- SOUL -->
            <div class="attribute-group">
              <h3>Soul</h3>
              <div class="field">
                <label>{{system.attributes.soul.label}}</label>
                <input type="number" name="system.attributes.soul.value" value="{{system.attributes.soul.value}}" />
              </div>
              <div class="field">
                <label>{{system.attributes.soul.sub1.label}}</label>
                <input type="number" name="system.attributes.soul.sub1.value" value="{{system.attributes.soul.sub1.value}}" />
              </div>
              <div class="field">
                <label>{{system.attributes.soul.sub2.label}}</label>
                <input type="number" name="system.attributes.soul.sub2.value" value="{{system.attributes.soul.sub2.value}}" />
              </div>
              <div class="field">
                <label>{{system.attributes.soul.sub3.label}}</label>
                <input type="number" name="system.attributes.soul.sub3.value" value="{{system.attributes.soul.sub3.value}}" />
              </div>
              <div class="field">
                <label>{{system.attributes.soul.sub4.label}}</label>
                <input type="number" name="system.attributes.soul.sub4.value" value="{{system.attributes.soul.sub4.value}}" />
              </div>
            </div>
          </div>
        </section>

        <!-- STATUS (placeholder for now) -->
        <section class="status-section">
          <h2>Status</h2>
          <p>TODO: Status resources (Life, Mana, etc.) will go here.</p>
        </section>
      </section>
    </div>

    <div class="tab" data-group="primary" data-tab="inventory">
      <!-- Later: your item list -->
      <p>TODO: Inventory list goes here.</p>
    </div>
  </section>
</form>
