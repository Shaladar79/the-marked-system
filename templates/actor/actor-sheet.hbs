<form class="marked sheet actor" autocomplete="off">
  <!-- HEADER -->
  <header class="sheet-header flexrow">
    <div class="profile">
      <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" />
    </div>

    <div class="header-fields">
      <div class="name-row">
        <input name="name" type="text" value="{{actor.name}}" placeholder="Name" />
      </div>

      <div class="meta-row flexrow">
        <div class="field">
          <label>Type</label>
          <input type="text" value="{{actor.type}}" disabled />
        </div>

        <div class="field">
          <label>Rank</label>
          <select name="system.details.rank">
            {{#select system.details.rank}}
              <option value="Normal">Normal</option>
              <option value="Quartz">Quartz</option>
              <option value="Topaz">Topaz</option>
              <option value="Garnet">Garnet</option>
              <option value="Emerald">Emerald</option>
              <option value="Sapphire">Sapphire</option>
              <option value="Ruby">Ruby</option>
              <option value="Diamond">Diamond</option>
              <option value="Mythrite">Mythrite</option>
              <option value="Celestite">Celestite</option>
            {{/select}}
          </select>
        </div>

        <div class="field">
          <label>Mark</label>
          <input type="text" name="system.details.mark" value="{{system.details.mark}}" />
        </div>
      </div>

      <div class="meta-row flexrow">
        <div class="field">
          <label>Race</label>
          <input type="text" name="system.details.race" value="{{system.details.race}}" placeholder="Race / Origin" />
        </div>

        <div class="field">
          <label>Background</label>
          <input type="text" name="system.details.background" value="{{system.details.background}}" placeholder="Background" />
        </div>
      </div>

      <!-- SPIRIT ROW -->
      <div class="meta-row flexrow">
        <div class="field">
          <label>Current Spirit</label>
          <input type="number" name="system.details.currentSpirit" value="{{system.details.currentSpirit}}" />
        </div>

        <div class="field">
          <label>Spent Spirit</label>
          <input type="number" name="system.details.spentSpirit" value="{{system.details.spentSpirit}}" />
        </div>

        <div class="field">
          <label>Total Spirit</label>
          <input type="number" name="system.details.totalSpirit" value="{{system.details.totalSpirit}}" />
        </div>
      </div>
    </div>
  </header>

  <!-- TABS -->
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="main">Main</a>
    <a class="item" data-tab="inventory">Inventory</a>
  </nav>

  <!-- BODY -->
  <section class="sheet-body">
    <div class="tab" data-group="primary" data-tab="main">
      <!-- MAIN TAB: Attributes & Status -->
      <section class="main-grid">
        <!-- Attributes -->
        <section class="attributes-section">
          <h2>Attributes</h2>

          <div class="attribute-groups flexrow">
            <!-- BODY -->
            <div class="attribute-group">
              <h3>Body</h3>
              <div class="field">
                <label>{{system.attributes.body.label}}</label>
                <input type="number" name="system.attributes.body.value" value="{{system.attributes.body.value}}" />
              </div>
              <div class="field">
                <label>{{system.attributes.body.might.label}}</label>
                <input type="number" name="system.attributes.body.might.value" value="{{system.attributes.body.might.value}}" />
              </div>
              <div class="field">
                <label>{{system.attributes.body.swiftness.label}}</label>
                <input type="number" name="system.attributes.body.swiftness.value" value="{{system.attributes.body.swiftness.value}}" />
              </div>
              <div class="field">
                <label>{{system.attributes.body.fortitude.label}}</label>
                <input type="number" name="system.attributes.body.fortitude.value" value="{{system.attributes.body.fortitude.value}}" />
              </div>
              <div class="field">
                <label>{{system.attributes.body.endurance.label}}</label>
                <input type="number" name="system.attributes.body.endurance.value" value="{{system.attributes.body.endurance.value}}" />
              </div>
            </div>

            <!-- MIND -->
            <div class="attribute-group">
              <h3>Mind</h3>
              <div class="field">
                <label>{{system.attributes.mind.label}}</label>
                <input type="number" name="system.attributes.mind.value" value="{{system.attributes.mind.value}}" />
              </div>
              <div class="field">
                <label>{{system.attributes.mind.insight.label}}</label>
                <input type="number" name="system.attributes.mind.insight.value" value="{{system.attributes.mind.insight.value}}" />
              </div>
              <div class="field">
                <label>{{system.attributes.mind.quickness.label}}</label>
                <input type="number" name="system.attributes.mind.quickness.value" value="{{system.attributes.mind.quickness.value}}" />
              </div>
              <div class="field">
                <label>{{system.attributes.mind.willpower.label}}</label>
                <input type="number" name="system.attributes.mind.willpower.value" value="{{system.attributes.mind.willpower.value}}" />
              </div>
              <div class="field">
                <label>{{system.attributes.mind.focus.label}}</label>
                <input type="number" name="system.attributes.mind.focus.value" value="{{system.attributes.mind.focus.value}}" />
              </div>
            </div>

            <!-- SOUL -->
            <div class="attribute-group">
              <h3>Soul</h3>
              <div class="field">
                <label>{{system.attributes.soul.label}}</label>
                <input type="number" name="system.attributes.soul.value" value="{{system.attributes.soul.value}}" />
              </div>
              <div class="field">
                <label>{{system.attributes.soul.presence.label}}</label>
                <input type="number" name="system.attributes.soul.presence.value" value="{{system.attributes.soul.presence.value}}" />
              </div>
              <div class="field">
                <label>{{system.attributes.soul.grace.label}}</label>
                <input type="number" name="system.attributes.soul.grace.value" value="{{system.attributes.soul.grace.value}}" />
              </div>
              <div class="field">
                <label>{{system.attributes.soul.resolve.label}}</label>
                <input type="number" name="system.attributes.soul.resolve.value" value="{{system.attributes.soul.resolve.value}}" />
              </div>
              <div class="field">
                <label>{{system.attributes.soul.resonance.label}}</label>
                <input type="number" name="system.attributes.soul.resonance.value" value="{{system.attributes.soul.resonance.value}}" />
              </div>
            </div>
          </div>
        </section>

        <!-- STATUS -->
        <section class="status-section">
          <h2>Status</h2>

          <div class="status-grid">
            <!-- Vitality -->
            <div class="field">
              <label>{{system.status.vitality.label}}</label>
              <input type="number" name="system.status.vitality.value" value="{{system.status.vitality.value}}" />
              <span>/</span>
              <input type="number" name="system.status.vitality.max" value="{{system.status.vitality.max}}" />
            </div>

            <!-- Mana -->
            <div class="field">
              <label>{{system.status.mana.label}}</label>
              <input type="number" name="system.status.mana.value" value="{{system.status.mana.value}}" />
              <span>/</span>
              <input type="number" name="system.status.mana.max" value="{{system.status.mana.max}}" />
            </div>

            <!-- Stamina -->
            <div class="field">
              <label>{{system.status.stamina.label}}</label>
              <input type="number" name="system.status.stamina.value" value="{{system.status.stamina.value}}" />
              <span>/</span>
              <input type="number" name="system.status.stamina.max" value="{{system.status.stamina.max}}" />
            </div>

            <!-- Defense -->
            <div class="field">
              <label>{{system.status.defense.label}}</label>
              <input type="number" name="system.status.defense.value" value="{{system.status.defense.value}}" />
            </div>

            <!-- Reaction -->
            <div class="field">
              <label>{{system.status.reaction.label}}</label>
              <input type="number" name="system.status.reaction.value" value="{{system.status.reaction.value}}" />
            </div>

            <!-- Trauma -->
            <div class="field">
              <label>{{system.status.trauma.label}}</label>
              <input type="number" name="system.status.trauma.value" value="{{system.status.trauma.value}}" />
              <span>/</span>
              <input type="number" name="system.status.trauma.max" value="{{system.status.trauma.max}}" />
            </div>

            <!-- Pace -->
            <div class="field">
              <label>{{system.status.pace.label}}</label>
              <input type="number" name="system.status.pace.value" value="{{system.status.pace.value}}" />
            </div>

            <!-- Armor -->
            <div class="field">
              <label>{{system.status.armor.label}}</label>
              <input type="number" name="system.status.armor.value" value="{{system.status.armor.value}}" />
              <span>/</span>
              <input type="number" name="system.status.armor.max" value="{{system.status.armor.max}}" />
            </div>

            <!-- Shielding -->
            <div class="field">
              <label>{{system.status.shielding.label}}</label>
              <input type="number" name="system.status.shielding.value" value="{{system.status.shielding.value}}" />
            </div>
          </div>
        </section>
      </section>
    </div>

    <div class="tab" data-group="primary" data-tab="inventory">
      <!-- Later: your item list -->
      <p>TODO: Inventory list goes here.</p>
    </div>
  </section>
</form>
