{{!-- templates/actors/parts/information.hbs --}}

<section class="info-section">

  <h2>Information</h2>

  <hr>

  {{!-- ============================
       RACE SECTION (placeholder)
       ============================ --}}
<h3>Race Description</h3>
<div class="info-block">
  {{#if system.details.race}}
    {{#with (lookup config.raceData system.details.race) as |race|}}
      <strong>{{race.name}}</strong><br>
      {{{race.description}}}
    {{/with}}
  {{else}}
    <em>Select a race to view its description.</em>
  {{/if}}
</div>

  <hr>

  {{!-- ============================
       BACKGROUND SECTION
       ============================ --}}
  <h3>Background</h3>

  <div class="info-block background-info">

    {{#if system.details.background}}

      <strong>
        {{!-- Look up the full readable background label --}}
        {{#if system.details.backgroundType}}
          {{!-- Use the correct background list depending on type --}}
          {{#with (lookup config.backgroundsByType system.details.backgroundType) as |bgList|}}
            {{lookup bgList system.details.background}}
          {{/with}}
        {{else}}
          {{!-- Fallback: search in all backgrounds if type missing --}}
          {{lookup config.backgrounds system.details.background}}
        {{/if}}
      </strong>

      <br>

      {{!-- Background description --}}
      {{lookup config.backgroundDescriptions system.details.background}}

    {{else}}

      <em>No background selected.</em>

    {{/if}}

  </div>

</section>
